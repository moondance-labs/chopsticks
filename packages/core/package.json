{
	"name": "@tanssi/chopsticks-core",
	"version": "0.8.0-7",
	"author": "Moondance Labs",
	"license": "Apache-2.0",
	"scripts": {
		"clean": "rm -rf lib tsconfig.tsbuildinfo",
		"pack-wasm": "scripts/pack-wasm.js",
		"build": "yarn pack-wasm; tsc -p ./tsconfig.json"
	},
	"dependencies": {
		"@polkadot/api": "^10.9.1",
		"@polkadot/util-crypto": "^12.3.2",
		"@tanssi/chopsticks-executor": "workspace:*",
		"axios": "^1.4.0",
		"eventemitter3": "^5.0.1",
		"localforage": "^1.10.0",
		"lodash": "^4.17.21",
		"pino": "^8.15.0",
		"pino-pretty": "^10.2.0",
		"sql.js": "^1.8.0",
		"sqlite3": "^5.1.6",
		"typeorm": "^0.3.17",
		"zod": "^3.22.2"
	},
	"devDependencies": {
		"@types/lodash": "^4.14.197",
		"@types/sql.js": "^1.4.4",
		"fflate": "^0.8.0",
		"typescript": "^5.1.6"
	},
	"files": [
		"lib"
	],
	"main": "./lib/index.js",
	"types": "./lib/index.d.ts",
	"exports": {
		".": {
			"types": "./lib/index.d.ts",
			"default": "./lib/index.js"
		},
		"./*": {
			"types": "./lib/*.d.ts",
			"default": "./lib/*.js"
		},
		"./package.json": "./package.json"
	},
	"stableVersion": "0.7.3"
